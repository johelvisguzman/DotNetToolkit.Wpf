<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFrameworks>net45;netcoreapp3.1</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <ProjectGuid>{BE891A79-4DFA-4825-B68A-3B6E4B397FEF}</ProjectGuid>
    <AssemblyName>DotNetToolkit.Wpf</AssemblyName>
	  <RootNamespace>DotNetToolkit.Wpf</RootNamespace>
	  <Description>A toolkit for creating WPF apps.</Description>
    <NoWarn>CS1591;CS1574</NoWarn>
    <ExtrasEnableWpfProjectSetup>true</ExtrasEnableWpfProjectSetup>
    <Configurations>Debug;Release</Configurations>
    <ErrorReport>prompt</ErrorReport>
    <DocumentationFile>bin\$(Configuration)\DotNetToolkit.Wpf.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.19" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  
</Project>